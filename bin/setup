#!/usr/bin/env bash
set -euo pipefail
IFS=$'\n\t'

echo ">>> Installing dependencies... ðŸ‹ï¸â€â™‚ï¸"
bundle install

echo ">>> Checking if protoc is available... ðŸ‘€"
protoc --version

echo ">>> Setting up gem_rbs_collection... ðŸ’Ž"
REPODIR=$(cd $(dirname $0)/..; pwd)/tmp/rbs/gem_rbs_collection
if [ -e $REPODIR ]; then
  echo "      ${REPODIR} exists"
else
  echo "      Cloning git repo into ${REPODIR}..."
  mkdir -p $REPODIR/..
  git clone https://github.com/ruby/gem_rbs_collection.git ${REPODIR}
fi
